extends layout

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        #user
          h1.text-center.login-title Welcome #{user.firstName}. Check your accounts below:
            div.signup-wall
              ul.user-details
                li Checking Balance :    #{user.balance}
                li Savings Balance:    #{user.savings}
            br
            a(href='/transactions', class='text-center') See Transactions
            a(href='/home', class='text-center new-account') Go Home
            a(href='/signout', class='text-center new-account') Sign Out

  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Transfer Funds
          div.signup-wall
            form(class='form-signin', action='/deposit', method='POST')                            
              input(type='number', name='deposit', class='form-control', placeholder='0',required, step="0.01")
              button(class='btn btn-lg btn-primary btn-block', type='submit') Deposit to Checking
              span.clearfix
            form(class='form-signin', action='/withdraw', method='POST')                            
              input(type='number', name='withdraw', class='form-control', placeholder='0',required, step="0.01")
              button(class='btn btn-lg btn-primary btn-block', type='submit') Withdraw from Checking
              span.clearfix
            form(class='form-signin', action='/depositSave', method='POST')                            
              input(type='number', name='depositSave', class='form-control', placeholder='0',required, step="0.01")
              button(class='btn btn-lg btn-primary btn-block', type='submit') Deposit to Savings
              span.clearfix
            form(class='form-signin', action='/withdrawSave', method='POST')                            
              input(type='number', name='withdrawSave', class='form-control', placeholder='0',required, step="0.01")
              button(class='btn btn-lg btn-primary btn-block', type='submit') Withdraw from Savings
              span.clearfix
            form(class='form-signin', action='/checkSave', method='POST')                            
              input(type='number', name='checkSave', class='form-control', placeholder='0',required, step="0.01")
              button(class='btn btn-lg btn-primary btn-block', type='submit') Transfer from Checking to Savings
              span.clearfix    
            form(class='form-signin', action='/saveCheck', method='POST')                            
              input(type='number', name='saveCheck', class='form-control', placeholder='0',required, step="0.01")
              button(class='btn btn-lg btn-primary btn-block', type='submit') Transfer from Savings to Checking
              span.clearfix    